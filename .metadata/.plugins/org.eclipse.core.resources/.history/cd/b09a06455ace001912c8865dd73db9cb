package projet1;

import java.util.Scanner;

public class sdz1 {
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		double choix = 0;
		char reponse = 'O';
		Scanner sc = new Scanner(System.in);
		Scanner wc = new Scanner(System.in);
		while (reponse == 'O')
		{
			
		  while(choix != 1 && choix != 2)
		  	{
			  System.out.println("1. Convertisseur Celsius en Fahrenheit \n2. Convertisseur Fahrenheit en Celsius");
			  choix = wc.nextInt();
			}
		  
		  
		  if (choix == 1) {
			  System.out.println("Votre température Celsius?");
			  double celsus = wc.nextInt() * 9/5 + 32;
			  System.out.println("votre temperature en Fahrenheit : " +celsus);
		  } else {
			  if(choix == 2) {
				  System.out.println("Votre température Fahrenheit?");
				  double celsus = (wc.nextInt() - 32) * 5/9;
				  System.out.println("votre temperature en Celsius : " +celsus);
			  }
		  }
		          
		  reponse = ' ';
		                        
		  
		  while(reponse != 'O' && reponse != 'N')
		  {
		   
		    System.out.println("Voulez-vous réessayer ? (O/N)");
		    reponse = sc.nextLine().charAt(0);
		    choix = 0;
		  }
		}
		System.out.println("Au revoir…");
	}

}
